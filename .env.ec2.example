# EC2 Docker Deployment Environment Variables
# Copy this file to .env.ec2 and update with your actual values

# JWT Secret for authentication
JWT_SECRET=your-production-jwt-secret-here

# PostgreSQL Database Configuration (Docker container)
# Note: When using docker-compose, use 'postgres' as host
# When connecting from host machine, use 'localhost'
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=munbon

# Redis Configuration (using local Redis container)
REDIS_HOST=redis
REDIS_PORT=6379

# InfluxDB Configuration (if using external InfluxDB)
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=munbon
INFLUXDB_BUCKET=sensor_data

# AWS Configuration (if needed for S3, etc.)
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Thai Meteorological Department API
TMD_API_KEY=your-tmd-api-key
TMD_API_URL=https://api.tmd.go.th/v1

# LINE Notification Service
LINE_CHANNEL_ACCESS_TOKEN=your-line-token
LINE_NOTIFY_TOKEN=your-line-notify-token

# Application Settings
NODE_ENV=production
LOG_LEVEL=info

# Service-specific configurations
SENSOR_DATA_RETENTION_DAYS=90
WEATHER_UPDATE_INTERVAL=3600
WATER_LEVEL_CHECK_INTERVAL=300

# External Services
SCADA_OPC_URL=opc.tcp://scada-server:4840
SCADA_USERNAME=scada-user
SCADA_PASSWORD=scada-password