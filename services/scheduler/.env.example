# Service Configuration
SERVICE_NAME=scheduler
SERVICE_PORT=3021
LOG_LEVEL=INFO
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/munbon_scheduler
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/3
REDIS_PASSWORD=
REDIS_POOL_SIZE=10

# Service URLs
ROS_SERVICE_URL=http://localhost:3047
GIS_SERVICE_URL=http://localhost:3006
FLOW_MONITORING_URL=http://localhost:3011
WEATHER_SERVICE_URL=http://localhost:3009
AUTH_SERVICE_URL=http://localhost:3001

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Optimization Settings
OPTIMIZATION_TIMEOUT_SECONDS=60
MAX_PARALLEL_OPTIMIZATIONS=5
SCHEDULE_HORIZON_DAYS=7

# Field Team Configuration
MAX_OPERATIONS_PER_DAY=30
DEFAULT_OPERATION_TIME_MINUTES=15
TRAVEL_SPEED_KMH=40

# Real-time Monitoring
GATE_STATE_CHECK_INTERVAL=300  # 5 minutes
DEVIATION_THRESHOLD_PERCENT=10
ADAPTATION_COOLDOWN_MINUTES=15

# Performance
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600
MAX_BATCH_SIZE=100