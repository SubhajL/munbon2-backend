# Server Configuration
NODE_ENV=development
PORT=3047
HOST=0.0.0.0
LOG_LEVEL=info

# TimescaleDB Connection (Read-only access to weather data)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_DATABASE=sensor_data
TIMESCALE_USER=weather_reader
TIMESCALE_PASSWORD=weather_reader_password
TIMESCALE_SSL=false

# PostgreSQL Connection (Read-only access to weather integration data)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=munbon_weather
POSTGRES_USER=weather_reader
POSTGRES_PASSWORD=weather_reader_password
POSTGRES_SSL=false

# Redis Configuration (for caching and pub/sub)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=4

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_CLIENT_ID=weather-monitoring-service
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_RECONNECT_PERIOD=5000

# WebSocket Configuration
WEBSOCKET_PATH=/weather/socket.io
WEBSOCKET_CORS_ORIGIN=*

# Weather Alert Configuration
ALERT_HIGH_TEMP_THRESHOLD=40
ALERT_LOW_TEMP_THRESHOLD=10
ALERT_HIGH_WIND_SPEED_THRESHOLD=60
ALERT_HEAVY_RAIN_THRESHOLD=50
ALERT_FROST_WARNING_TEMP=5
ALERT_COOLDOWN_MINUTES=60

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=365
ANALYTICS_AGGREGATION_INTERVALS=15m,1h,6h,1d,7d
ANALYTICS_CACHE_TTL_SECONDS=900

# Forecasting Configuration
FORECAST_SHORT_TERM_DAYS=7
FORECAST_LONG_TERM_DAYS=30
FORECAST_UPDATE_INTERVAL_MINUTES=60
FORECAST_CONFIDENCE_THRESHOLD=0.7

# Irrigation Recommendation Configuration
IRRIGATION_ET_CALCULATION_METHOD=penman-monteith
IRRIGATION_SOIL_MOISTURE_WEIGHT=0.4
IRRIGATION_FORECAST_WEIGHT=0.6
IRRIGATION_RECOMMENDATION_HORIZON_DAYS=3

# Service Discovery
NOTIFICATION_SERVICE_URL=http://notification-service:3012
ALERT_SERVICE_URL=http://alert-service:3013
AI_MODEL_SERVICE_URL=http://ai-model-service:3008
CROP_MANAGEMENT_SERVICE_URL=http://crop-management-service:3029

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
HEALTH_CHECK_INTERVAL_MS=30000
METRICS_ENABLED=true
METRICS_PORT=9095