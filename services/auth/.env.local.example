# Auth Service Environment Variables
# Copy this to .env.local and update values

# Service Configuration
SERVICE_NAME=auth-service
PORT=3001
NODE_ENV=development

# Database - PostgreSQL
DB_HOST=localhost
DB_PORT=5434
DB_NAME=munbon_auth
DB_USER=postgres
DB_PASSWORD=your_password

# Redis for sessions
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-local-dev-secret-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Thai Digital ID
THAI_ID_CLIENT_ID=your-thai-id-client
THAI_ID_CLIENT_SECRET=your-thai-id-secret
THAI_ID_CALLBACK_URL=http://localhost:3001/auth/thai-id/callback

# Service Discovery
SERVICE_REGISTRY_URL=http://localhost:8500
API_GATEWAY_URL=http://localhost:8000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100