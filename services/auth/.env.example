# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/munbon_dev
DATABASE_SSL=false

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d
JWT_ISSUER=munbon-auth
JWT_AUDIENCE=munbon-api

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# OAuth Configuration
OAUTH_CALLBACK_URL=http://localhost:3001/api/v1/auth/callback

# Thai Digital ID Configuration
THAI_DIGITAL_ID_CLIENT_ID=your-client-id
THAI_DIGITAL_ID_CLIENT_SECRET=your-client-secret
THAI_DIGITAL_ID_AUTH_URL=https://api.digitalid.go.th/oauth/authorize
THAI_DIGITAL_ID_TOKEN_URL=https://api.digitalid.go.th/oauth/token
THAI_DIGITAL_ID_USERINFO_URL=https://api.digitalid.go.th/userinfo

# TOTP/2FA Configuration
TOTP_ISSUER=Munbon Irrigation System
TOTP_WINDOW=1

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@munbon.go.th
SMTP_PASS=your-smtp-password
EMAIL_FROM=Munbon System <noreply@munbon.go.th>

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Service Discovery
AUTH_SERVICE_NAME=auth-service
SERVICE_REGISTRY_URL=http://kong:8001