# Simple Dockerfile without shared dependencies
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Remove the shared dependency temporarily for Docker build
RUN sed -i '/"@munbon\/shared":/d' package.json

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build TypeScript (if tsconfig exists)
RUN if [ -f "tsconfig.json" ]; then npm run build; fi

# Expose port
EXPOSE 3002

# Start the application
CMD ["node", "dist/index.js"]