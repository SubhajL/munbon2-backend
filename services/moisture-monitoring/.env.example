# Server Configuration
NODE_ENV=development
PORT=3044
HOST=0.0.0.0
LOG_LEVEL=info

# TimescaleDB Connection (Read-only access to sensor data)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_DATABASE=sensor_data
TIMESCALE_USER=moisture_reader
TIMESCALE_PASSWORD=moisture_reader_password
TIMESCALE_SSL=false

# Redis Configuration (for caching and pub/sub)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_CLIENT_ID=moisture-monitoring-service
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_RECONNECT_PERIOD=5000

# WebSocket Configuration
WEBSOCKET_PATH=/moisture/socket.io
WEBSOCKET_CORS_ORIGIN=*

# Alert Configuration
ALERT_LOW_MOISTURE_THRESHOLD=20
ALERT_CRITICAL_LOW_MOISTURE_THRESHOLD=10
ALERT_HIGH_MOISTURE_THRESHOLD=90
ALERT_FLOOD_DETECTION_ENABLED=true
ALERT_COOLDOWN_MINUTES=30

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_AGGREGATION_INTERVALS=5m,15m,1h,1d
ANALYTICS_CACHE_TTL_SECONDS=300

# Service Discovery
NOTIFICATION_SERVICE_URL=http://notification-service:3012
ALERT_SERVICE_URL=http://alert-service:3013

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
HEALTH_CHECK_INTERVAL_MS=30000
METRICS_ENABLED=true
METRICS_PORT=9092