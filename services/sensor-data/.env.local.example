# Sensor Data Service Environment Variables
# Copy this to .env.local and update values

# Service Configuration
SERVICE_NAME=sensor-data-service
PORT=3003
NODE_ENV=development

# TimescaleDB for time-series data
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_DB=munbon_sensors
TIMESCALE_USER=postgres
TIMESCALE_PASSWORD=your_password

# MQTT for sensor ingestion
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=sensor_service
MQTT_PASSWORD=mqtt_password
MQTT_TOPICS=sensors/+/data,sensors/+/status

# Kafka for event streaming
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=sensor-data-service
KAFKA_CONSUMER_GROUP=sensor-data-consumers
KAFKA_TOPICS=sensor.telemetry,sensor.alerts

# AWS SQS (if using)
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_key
AWS_SECRET_ACCESS_KEY=your_secret
SQS_QUEUE_URL=https://sqs.ap-southeast-1.amazonaws.com/123456789/sensor-data

# Data Retention
DATA_RETENTION_DAYS=365
AGGREGATE_RETENTION_DAYS=1825

# Service Discovery
SERVICE_REGISTRY_URL=http://localhost:8500
AUTH_SERVICE_URL=http://localhost:3001

# Monitoring
METRICS_PORT=9003
ENABLE_METRICS=true

# Data Processing
BATCH_SIZE=1000
PROCESSING_INTERVAL_MS=5000
MAX_RETRIES=3