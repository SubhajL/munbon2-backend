# Dockerfile for Keep-Alive Service
FROM node:18-alpine

WORKDIR /app

# Copy the keep-alive service
COPY keep-alive-service.js ./
COPY keep-alive-package.json ./package.json

# Expose monitoring port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=3s --retries=3 \
    CMD node -e "require('http').get('http://localhost:3001/status', (r) => { process.exit(r.statusCode === 200 ? 0 : 1); })"

# Run the service
CMD ["node", "keep-alive-service.js"]