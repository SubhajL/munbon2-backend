# GIS Service Environment Variables
# Copy this to .env.local and update values

# Service Configuration
SERVICE_NAME=gis-service
PORT=3007
NODE_ENV=development

# PostGIS Database
POSTGIS_HOST=localhost
POSTGIS_PORT=5434
POSTGIS_DB=munbon_gis
POSTGIS_USER=postgres
POSTGIS_PASSWORD=your_password

# Tile Server
TILE_CACHE_DIR=/tmp/munbon-tiles
ENABLE_TILE_CACHE=true
MAX_ZOOM_LEVEL=18
MIN_ZOOM_LEVEL=8

# Mapbox (for base maps)
MAPBOX_ACCESS_TOKEN=your_mapbox_token

# File Processing
UPLOAD_DIR=/tmp/munbon-gis-uploads
MAX_FILE_SIZE_MB=100
ALLOWED_FORMATS=shp,geojson,kml,gpx

# Processing Queue
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=2
QUEUE_NAME=gis-processing

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
SENSOR_SERVICE_URL=http://localhost:3003

# Spatial Reference System
DEFAULT_SRID=4326
PROJECT_SRID=32647  # WGS 84 / UTM zone 47N

# Performance
DB_POOL_SIZE=10
CACHE_TTL_SECONDS=3600

# Vector Tiles
VECTOR_TILE_FORMAT=pbf
SIMPLIFICATION_TOLERANCE=1.0