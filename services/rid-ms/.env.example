# Service Configuration
NODE_ENV=development
PORT=3048
SERVICE_NAME=rid-ms-service

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5435
POSTGRES_DB=rid_ms
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
DATABASE_URL=postgresql://postgres:postgres123@localhost:5435/rid_ms

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=rid-ms-service
KAFKA_GROUP_ID=rid-ms-group

# File Processing Configuration
UPLOAD_DIR=/tmp/rid-ms/uploads
PROCESSED_DIR=/tmp/rid-ms/processed
ARCHIVE_DIR=/tmp/rid-ms/archive
MAX_FILE_SIZE=104857600  # 100MB
ALLOWED_FILE_TYPES=.zip,.shp,.dbf,.shx,.prj

# Shape File Processing
SHAPE_FILE_RETENTION_DAYS=30
PROCESS_BATCH_SIZE=100
COORDINATE_SYSTEM=EPSG:32648  # WGS 84 / UTM zone 48N

# Water Demand Configuration
DEFAULT_WATER_DEMAND_METHOD=RID-MS  # RID-MS, ROS, AWD
WATER_DEMAND_UPDATE_INTERVAL=weekly  # daily, weekly, bi-weekly

# API Configuration
API_PREFIX=/api/v1
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/rid-ms/service.log

# Job Scheduling
SHAPE_FILE_CHECK_CRON=0 6 * * *  # Daily at 6 AM
CLEANUP_CRON=0 2 * * 0  # Weekly on Sunday at 2 AM

# GIS Service Integration
GIS_SERVICE_URL=http://localhost:3006
GIS_SERVICE_API_KEY=

# Water Demand Service Integration
WATER_DEMAND_SERVICE_URL=http://localhost:3050
WATER_DEMAND_SERVICE_API_KEY=

# AWS Configuration (for SQS Processor)
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
SQS_QUEUE_URL=https://sqs.ap-southeast-1.amazonaws.com/your-account-id/munbon-sensor-data-queue-dev
SHAPE_FILE_BUCKET=munbon-shape-files-dev