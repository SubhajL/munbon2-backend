# Server Configuration
NODE_ENV=development
PORT=3047
SERVICE_NAME=ros-service

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/munbon_ros
MONGODB_MAX_POOL_SIZE=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# File Upload Configuration
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=.xlsx,.xls,.csv
UPLOAD_DIR=./uploads

# Cache Configuration
CACHE_TTL=3600
ENABLE_CACHE=true

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=15

# Logging
LOG_LEVEL=info
LOG_FILE=ros-service.log

# External Services
NOTIFICATION_SERVICE_URL=http://localhost:3015
WEATHER_SERVICE_URL=http://localhost:3009
CROP_SERVICE_URL=http://localhost:3010

# Report Generation
REPORT_TEMP_DIR=./temp/reports
ENABLE_PDF_GENERATION=true

# Calculation Parameters
DEFAULT_IRRIGATION_EFFICIENCY=0.85
WATER_LOSS_FACTOR=0.05
SEASONAL_ADJUSTMENT_ENABLED=true