# Server Configuration
NODE_ENV=development
PORT=3046
HOST=0.0.0.0
LOG_LEVEL=info

# TimescaleDB Connection (Read-only access to sensor data)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_DATABASE=sensor_data
TIMESCALE_USER=water_level_reader
TIMESCALE_PASSWORD=water_level_reader_password
TIMESCALE_SSL=false

# Redis Configuration (for caching and pub/sub)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=3

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_CLIENT_ID=water-level-monitoring-service
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_RECONNECT_PERIOD=5000

# WebSocket Configuration
WEBSOCKET_PATH=/water-level/socket.io
WEBSOCKET_CORS_ORIGIN=*

# Alert Configuration
ALERT_LOW_WATER_THRESHOLD=5
ALERT_CRITICAL_LOW_WATER_THRESHOLD=2
ALERT_HIGH_WATER_THRESHOLD=25
ALERT_CRITICAL_HIGH_WATER_THRESHOLD=28
ALERT_RAPID_CHANGE_THRESHOLD=5
ALERT_COOLDOWN_MINUTES=30

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_AGGREGATION_INTERVALS=5m,15m,1h,1d
ANALYTICS_CACHE_TTL_SECONDS=300

# Gate Control Integration
GATE_CONTROL_ENABLED=false
GATE_CONTROL_SERVICE_URL=http://scada-service:3006
GATE_CONTROL_MIN_LEVEL=10
GATE_CONTROL_MAX_LEVEL=20

# Service Discovery
NOTIFICATION_SERVICE_URL=http://notification-service:3012
ALERT_SERVICE_URL=http://alert-service:3013
SCADA_SERVICE_URL=http://scada-service:3006

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
HEALTH_CHECK_INTERVAL_MS=30000
METRICS_ENABLED=true
METRICS_PORT=9094